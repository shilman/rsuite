{
  "NumberInput": {
    "props": {
      "classPrefix": {
        "type": "string",
        "isRequired": false,
        "description": "The prefix of the component CSS class.",
        "defaultValue": "number-input"
      },
      "controls": {
        "type": "boolean | ((trigger: 'up' | 'down') => ReactNode)",
        "isRequired": false,
        "description": "Show or hide step controls, or provide a function to render custom icons.",
        "defaultValue": "true"
      },
      "decimalSeparator": {
        "type": "string",
        "isRequired": false,
        "description": "The decimal separator"
      },
      "defaultValue": {
        "type": "number",
        "isRequired": false,
        "description": "Default value."
      },
      "disabled": {
        "type": "boolean",
        "isRequired": false,
        "description": "Disabled component."
      },
      "formatter": {
        "type": "(value: number) => string",
        "isRequired": false,
        "description": "A format string used to display the number value."
      },
      "max": {
        "type": "number",
        "isRequired": false,
        "description": "Maximum value."
      },
      "min": {
        "type": "number",
        "isRequired": false,
        "description": "Minimum value."
      },
      "onChange": {
        "type": "(value: number , event) => void",
        "isRequired": false,
        "description": "The callback function when value changes."
      },
      "prefix": {
        "type": "ReactNode",
        "isRequired": false,
        "description": "Sets the element displayed to the left of the component."
      },
      "scrollable": {
        "type": "boolean",
        "isRequired": false,
        "description": "Whether the value can be changed through the wheel event.",
        "defaultValue": "true"
      },
      "size": {
        "type": "'lg' | 'md' | 'sm' | 'xs'",
        "isRequired": false,
        "description": "An input can have different sizes.",
        "defaultValue": "md"
      },
      "step": {
        "type": "number",
        "isRequired": false,
        "description": "The value of each step. can be decimal.",
        "defaultValue": "1"
      },
      "suffix": {
        "type": "ReactNode",
        "isRequired": false,
        "description": "Sets the element displayed on the right side of the component."
      },
      "value": {
        "type": "number",
        "isRequired": false,
        "description": "The current value (controlled)."
      }
    }
  }
}